# ls colors
alias ls='ls -G'

# homebrew
if [ -f $(brew --prefix)/etc/bash_completion ]; then
  . $(brew --prefix)/etc/bash_completion
fi

lesspipe=$( command -v lesspipe.sh ) && export LESSOPEN="|$lesspipe %s"

eval "$(rbenv init -)"

export SSL_CERT_FILE=/usr/local/opt/curl-ca-bundle/share/ca-bundle.crt
